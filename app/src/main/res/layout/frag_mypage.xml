<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:id="@+id/user_grade_sticker"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_marginHorizontal="125dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_baseline_people_mypage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usermyid"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="100dp"
        android:textStyle="normal"
        android:text="User ID"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="horizontal">

        <TableLayout android:layout_width="match_parent"
            android:layout_height="220dp"
            android:paddingHorizontal="20dp"
            android:padding="5dp"
            android:layout_marginTop="60dp"
            android:background="#6B799E">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <Button
                    android:id="@+id/userinfo"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="회 원 정 보  수 정"
                    android:paddingHorizontal="100dp"
                    android:textColor="#261326"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <Button
                    android:id="@+id/mylogout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="로 그 아 웃"
                    android:paddingHorizontal="100dp"
                    android:textColor="#261326"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <Button
                    android:id="@+id/userout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="회 원  탈 퇴"
                    android:paddingHorizontal="100dp"
                    android:textColor="#261326"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

            </TableRow>


        </TableLayout>

    </LinearLayout>




</LinearLayout>